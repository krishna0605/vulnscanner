# VulnScanner Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE DATABASE CONFIGURATION
# =============================================================================
# Primary database connection (Supabase PostgreSQL)
# Format: postgresql://postgres:[password]@[project-ref].supabase.co:5432/postgres
SUPABASE_DB_URL=

# Alternative database URL (fallback)
DATABASE_URL=

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
# JWT Secret Key - Generate a strong random key for production
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=60

# CSRF Protection
CSRF_HEADER_NAME=x-csrf-token
CSRF_SECRET=your-csrf-secret-key

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# SUPABASE CLIENT CONFIGURATION (Frontend)
# =============================================================================
# Supabase Project URL
REACT_APP_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon Key (safe to expose in frontend)
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# =============================================================================
# CACHING AND TASK QUEUE
# =============================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Application Environment
APP_ENV=development

# Debug Mode
DEBUG=true

# Database Echo (SQL logging)
DB_ECHO=false

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your Supabase project details from https://app.supabase.com
# 3. Generate strong secret keys for production
# 4. Update CORS_ORIGINS for your production domains
# 5. Configure Stripe keys for payment processing
# 6. Set up Redis if using caching/task queue features