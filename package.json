{
  "name": "vulscanner",
  "version": "1.0.0",
  "description": "AI-Powered URL Threat Intelligence & Vulnerability Analysis",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "backend/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
