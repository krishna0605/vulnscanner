APP_NAME=VulnScanner API

# Supabase Postgres connection string
# Find this in Supabase Project Settings → Database → Connection info
# Example format (ensure sslmode=require):
# postgresql://postgres:<YOUR_PASSWORD>@db.<PROJECT_REF>.supabase.co:5432/postgres?sslmode=require
SUPABASE_DB_URL=postgresql://postgres:password@db.your-ref.supabase.co:5432/postgres?sslmode=require

# Optional: direct DB URL override (if not using Supabase)
DATABASE_URL=

# JWT / Security
SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=60

# CORS
CORS_ORIGINS=http://localhost:3000

# CSRF (dev off by default). Set to any string to enable check.
CSRF_HEADER_NAME=x-csrf-token
CSRF_SECRET=

# Stripe
STRIPE_SECRET_KEY=

# Redis / Celery
REDIS_URL=redis://localhost:6379/0